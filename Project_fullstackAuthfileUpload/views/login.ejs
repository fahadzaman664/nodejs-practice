<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Login Page</title>
    <!-- Bootstrap 5 CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .form-card {
            padding: 3rem 2rem 4rem 2rem;
            /* increased padding top and bottom */
        }

        .signup-link {
            bottom: 1.5rem !important;
            /* push it down from bottom */
            right: 1.5rem !important;
            /* add some right margin */
        }
    </style>
</head>

<body class="bg-primary-subtle d-flex align-items-center justify-content-center min-vh-100">
    <div class="container" style="max-width: 400px;">
        <!-- Wrap alert and form together to keep center alignment -->
        <% if (typeof error !=='undefined' && error) { %>
            <div class="alert alert-danger text-center" role="alert" id="alertBox">
                <%= error %>
            </div>
            <% } %>


                <div class="card shadow form-card position-relative"
                    style="max-width: 400px; width: 100%; margin-top: 3rem; margin-bottom: 3rem;">
                    <h2 class="text-center mb-4">Login</h2>

                    <form action="/login" method="POST">
                        <!-- Email -->
                        <div class="mb-3">
                            <label for="email" class="form-label fw-semibold">Email</label>
                            <input type="email" class="form-control" id="email" name="email"
                                placeholder="you@example.com" required autocomplete="username">
                        </div>

                        <!-- Password -->
                        <div class="mb-3">
                            <label for="password" class="form-label fw-semibold">Password</label>
                            <input type="password" class="form-control" id="password" name="password"
                                placeholder="******" required autocomplete="current-password">
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>
                    </form>

                    <!-- Don't have an account? Signup (positioned at bottom right) -->
                    <div class="position-absolute signup-link">
                        <p class="mb-0 text-end small">
                            Donâ€™t have an account?
                            <a href="/register" class="text-decoration-none fw-semibold text-primary">Signup</a>
                        </p>
                    </div>
                </div>
    </div>

    <script>
        const alertBox = document.getElementById('alertBox');
        if (alertBox) {
            setTimeout(() => {
                alertBox.remove();
            }, 3000);
        }
    </script>
</body>

</html>